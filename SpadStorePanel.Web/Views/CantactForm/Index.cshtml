@section script
{
    <script>
        function submitForm() {
            // Initiate Variables With Form Content

            var email = $("#emailll").val();
            var name = $("#first-name").val();
            var message = $("#description").val();
            var subject = $("#subject").val();
            //var phone = $("#phone").val();

            jQuery.ajax({
                type: "POST",
                url: "/CantactForm/ContactUS",
                data: "email=" + email + "&name=" + name + "&message=" + message + "&subject=" + subject + "&phone=" + "093333333",
                success: function (text) {
                    if (text == "success") {

                        $("#submitButton").css("background-color", "green");
                        $("#submitButton").val("ثبت شد");
                        $("#emailll").val("");
                        $("#first-name").val("");
                        $("#description").val("");
                        $("#subject").val("");
                        //$("#phone").val("");

                    } else {
                        $("#submitButton").css("background-color", "red");
                        $("#submitButton").val("خطا");
                    }
                }
            });
        }
    </script>

