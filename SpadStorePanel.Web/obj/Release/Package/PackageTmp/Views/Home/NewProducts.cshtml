@model IEnumerable<SpadStorePanel.Infrastructure.Dtos.Product.ProductWithPriceDto>
<div class="theme-card creative-card creative-inner">
    <h5 class="title-border">محصولات جدید</h5>
    <div class="slide-1">
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <div>
                    <div class="media-banner plrb-0 b-g-white1 border-0">
                        <div class="media-banner-box">
                            <div class="media">
                                <a href="/Shop/Detail/@item.Id" tabindex="0">
                                    <img src="~/Files/ProductImages/Image/@item.Image" width="86px" height="110px" class="img-fluid "
                                         alt="banner">
                                </a>

                                    <div class="media-body">
                                        <div class="media-contant">
                                            <div>
                                                <div class="product-detail">
                                                    <ul class="rating">
                                                        <li><i class="fa fa-star"></i></li>
                                                        <li><i class="fa fa-star"></i></li>
                                                        <li><i class="fa fa-star"></i></li>
                                                        <li><i class="fa fa-star"></i></li>
                                                        <li><i class="fa fa-star-o"></i></li>
                                                    </ul>
                                                    <a href="product-page(no-sidebar).html" tabindex="0">
                                                        <p> @item.ShortTitle</p>
                                                    </a>
                                                    <h6>@item.Price تومان <span>@item.Price</span></h6>
                                                </div>
                                                <div class="cart-info">
                                                    <a href="product-page(no-sidebar).html" class="tooltip-top "
                                                       data-tippy-content="دیدن محصول">
                                                        <img src="assets/pic/svg/eye.svg" class="border-0" alt="eye" width="24px"
                                                             height="24px" />
                                                    </a>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>

                    </div>
                </div>


            }
        }
    </div>
</div>

