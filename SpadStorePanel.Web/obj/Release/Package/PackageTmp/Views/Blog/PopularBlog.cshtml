@model IEnumerable<SpadStorePanel.Web.ViewModels.ArticleListViewModel>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        <div class="post">
            <a href="/Blog/BlogDetail/@item.Id"
               class="photo">
                <img style="height: 200px;" width="300" height="195"
                     src="~/Files/ArticleImages/Image/@item.Image"
                     class="attachment-holamed-blog-300 size-holamed-blog-300 wp-post-image"
                     alt=""
                     sizes="(max-width: 300px) 100vw, 300px" />
            </a><a href="/Blog/BlogDetail/@item.Id">
                <h6>
                    هر آنچه باید درباره ما بدانید
                </h6>
            </a>
            <div class="blog-info">
                <ul>
                    <li class="ltx-icon-date">
                        <a href="/Blog/BlogDetail/@item.Id"
                           class="ltx-date"><span class="fa fa-clock-o"></span><span class="dt">@item.PersianDate</span></a>
                    </li>
                    <li class="ltx-icon-fav">
                        <span class="fa fa-eye"></span><i>1</i>
                    </li>
                    <li class="ltx-icon-comments"><span class="fa fa-comments"></span><i>@item.CountVoute</i></li>
                </ul>
            </div>
        </div>
    }
}